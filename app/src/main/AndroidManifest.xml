<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waterCounter">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_water"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_water"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.waterCounter.ui.activities.StatsActivity">

        </activity>
        <activity android:name=".ui.activities.RemoveActivity" />
        <activity android:name=".ui.activities.AddActivity" />
        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>



</manifest>